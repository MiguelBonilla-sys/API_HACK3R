{
  "version": 2,
  "public": true,
  "env": {
    "VERCEL": "1",
    "VERCEL_ENV": "production"
  },
  "builds": [
    {
      "src": "mysite/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "pythonVersion": "3.12",
        "maxLambdaSize": "10mb"
      }
    },
    {
      "src": "staticfiles/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "mysite/wsgi.py"
    }
  ],
  "functions": {
    "mysite/wsgi.py": {
      "maxDuration": 10
    }
  }
}